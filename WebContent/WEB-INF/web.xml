<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>dachuang</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>controller.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>UserRegisterServlet</servlet-name>
    <servlet-class>controller.UserRegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserRegisterServlet</servlet-name>
    <url-pattern>/Register</url-pattern>
  </servlet-mapping>
  
  
     <servlet>
    <servlet-name>StatusServlet</servlet-name>
    <servlet-class>controller.StatusServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StatusServlet</servlet-name>
    <url-pattern>/isStatus</url-pattern>
  </servlet-mapping>
  
     <servlet>
    <servlet-name>ReleaseSaleServlet</servlet-name>
    <servlet-class>controller.ReleaseSaleServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReleaseSaleServlet</servlet-name>
    <url-pattern>/releaseSale</url-pattern>
  </servlet-mapping>
  
 <servlet>
    <servlet-name>GoodListServlet</servlet-name>
    <servlet-class>controller.GoodListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GoodListServlet</servlet-name>
    <url-pattern>/sale</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>GoodDetailServlet</servlet-name>
    <servlet-class>controller.GoodDetailServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GoodDetailServlet</servlet-name>
    <url-pattern>/good</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>BestGoods</servlet-name>
    <servlet-class>controller.BestGoods</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BestGoods</servlet-name>
    <url-pattern>/recommendation</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>login</filter-name>
    <filter-class>filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>login</filter-name>
    <url-pattern>/isStatus</url-pattern>
  </filter-mapping>
</web-app>